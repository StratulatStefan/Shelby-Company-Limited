<html>
    <head>
        <link rel="stylesheet" text="text/css" href="/styles/creare_cont_style.css" />
    </head>
    <body>
        <h1>Create Account</h1>
        
        <h2 id="status_message">
            <% if(data.account_status != null){%>
                <%- data.account_status -%>
            <% } else{ %>
                <br/>
            <% } %>
        </h2>
        <form id="myform" action="/register" method="POST">
            <fieldset>
                <legend>Personal Data</legend>
                <div class="creare_field">
                    <label>Last Name : </label>
                    <input type="text" name="last_name" required="required" />
                    <label>First Name : </label>
                    <input type="text" name="first_name" required="required"/>
                </div>
                <div class="creare_field">
                    <label>Gender : </label>
                    <select name="gender" required="required">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="U">Unknown</option>
                    </select>
                    <label>Age : </label>
                    <input type="number" name="age" required="required"/>
                </div>
                <div class="creare_field">
                    <label>Email : </label>
                    <input type="email" name="email" required="required"/>
                    <label>Password : </label>
                    <input type="password" name="password" required="required"/> 
                </div>
                <div class="creare_field">
                    <label>Address : </label>
                    <input type="text" name="address" required="required"/>
                    <label>City : </label>
                    <input type="text" name="city" required="required"/>
                </div>
            </fieldset>


            <fieldset>
                <legend>Quiz</legend>
            <div class="creare_field">
                <label>Favourite season : </label>
                <select name="fav_season" required="required">
                    <option value="1">I</option>
                    <option value="2">II</option>
                    <option value="3">III</option>
                    <option value="4">IV</option>
                    <option value="5">V</option>
                </select>
                <label>Rate the overall experience (1-10): </label>
                <input type="number" step = "0.5" name="rate" min=1 max=10 required="required"/>
            </div>
            <div class="creare_field">
                <label>Favourite Family Member : </label>
                <select name="fav_fam_mem" required="required">
                    <option value="Thomas">Thomas Shelby</option>
                    <option value="Arthur">Arthur Shelby</option>
                    <option value="John">John Shelby</option>
                    <option value="Ada">Ada Shelby</option>
                    <option value="Finn">Finn Shelby</option>
                    <option value="Polly">Polly Gray</option>
                    <option value="Michael">Michael Gray</option>
                </select>
                <label>Favourite Bad Character : </label>
                <select name="fav_bad_character" required="required">
                    <option value="Kimber">Billy Kimber</option>
                    <option value="Mosley">Oswland Mosley</option>
                    <option value="Sabrini">Sabrini</option>
                    <option value="Priest">The Priest</option>
                    <option value="Solomons">Alfie Solomons</option>
                    <option value="Billy">Billy Boys</option>
                    <option value="Luca">Luca Changretta</option>
                </select>
            </div>
            <div class="creare_field">
                <label>The story is real? </label>
                <select name="real" required="required">
                    <option value="Y">Yes</option>
                    <option value="N">No</option>
                    <option value="U">It could be</option>
                </select>
                <label>How many more seasons? </label>
                <input type="number" name="seasons" min=1 max=10 required="required"/>
            </div>
            <div class="creare_field">
                <label>Another opinion or observation</label>
                <br/><br/>
                <textarea name="opinion" value=" "
                       style="width: 700px; height: 60px;text-align: left;"></textarea>
            </div>
        </fieldset>
        <input id="creare_button" type="submit" value="Register" />
        </form>
    </body>
</html>